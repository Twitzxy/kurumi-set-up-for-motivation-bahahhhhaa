-- kurumi mouse text bahahahhaha
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local mouse = player:GetMouse()

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MouseFollowerText"
screenGui.ResetOnSpawn = false
screenGui.Parent = game:GetService("CoreGui")


local label = Instance.new("TextLabel")
label.Parent = screenGui
label.Text = "kurumi.cc"
label.Font = Enum.Font.Code
label.TextSize = 18 
label.TextColor3 = Color3.new(1, 0, 0) 
label.BackgroundTransparency = 1
label.Size = UDim2.new(0, 120, 0, 30)
label.AnchorPoint = Vector2.new(0.5, 0.5)
label.TextXAlignment = Enum.TextXAlignment.Center
label.TextYAlignment = Enum.TextYAlignment.Center


local stroke = Instance.new("UIStroke")
stroke.Thickness = 1
stroke.Color = Color3.new(0, 0, 0)
stroke.Parent = label


local flashSpeed = 3
local followSmoothness = 0.2 


local currentPos = Vector2.new(mouse.X, mouse.Y + 25)

RunService.RenderStepped:Connect(function(dt)
	local targetPos = Vector2.new(mouse.X, mouse.Y + 25)
	currentPos = currentPos:Lerp(targetPos, followSmoothness)
	label.Position = UDim2.new(0, currentPos.X, 0, currentPos.Y)
	
	
	local alpha = (math.sin(tick() * flashSpeed) + 1) / 2
	local fadeAlpha = alpha * 0.8
	label.TextTransparency = fadeAlpha
	stroke.Transparency = fadeAlpha
	
	label.TextColor3 = Color3.new(1, alpha, 0)
end)
-- kurumi watermark

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "WatermarkGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = game:GetService("CoreGui")

-- Create container frame (for background and outline)
local frame = Instance.new("Frame")
frame.Parent = screenGui
frame.BackgroundColor3 = Color3.new(0, 0, 0) -- black background
frame.BorderSizePixel = 0
frame.Position = UDim2.new(0.5, 0, 0, -50)
frame.Size = UDim2.new(0, 0, 0, 24)

-- Add red outline to frame
local stroke = Instance.new("UIStroke")
stroke.Thickness = 2
stroke.Color = Color3.new(1, 0, 0)
stroke.Parent = frame

-- Add text label (inside frame)
local textLabel = Instance.new("TextLabel")
textLabel.Parent = frame
textLabel.BackgroundTransparency = 1
textLabel.TextColor3 = Color3.new(1, 0, 0) -- initial red
textLabel.Font = Enum.Font.Code
textLabel.TextSize = 16
textLabel.Position = UDim2.new(0, 10, 0, 0)
textLabel.Size = UDim2.new(1, -20, 1, 0)
textLabel.TextXAlignment = Enum.TextXAlignment.Center
textLabel.TextYAlignment = Enum.TextYAlignment.Center

-- Services
local RunService = game:GetService("RunService")
local Stats = game:GetService("Stats")
local MarketplaceService = game:GetService("MarketplaceService")

-- FPS calculation
local lastUpdate = tick()
local frames = 0
local fps = 0

-- Function to format current time
local function getTimeString()
	local now = os.date("*t")
	return string.format("%02d:%02d:%02d", now.hour, now.min, now.sec)
end

-- Function to get game name by PlaceId
local function getGameName()
	local success, result = pcall(function()
		return MarketplaceService:GetProductInfo(game.PlaceId).Name
	end)
	return success and result or ("PlaceId: " .. tostring(game.PlaceId))
end

-- Smooth flash settings
local flashSpeed = 2 -- controls speed of glowing
local fadeMax = 0.7  -- max transparency for fading effect

-- Update watermark continuously
RunService.RenderStepped:Connect(function()
	-- FPS calculation
	frames += 1
	local now = tick()
	if now - lastUpdate >= 1 then
		fps = frames
		frames = 0
		lastUpdate = now
	end
	
	local pingStat = Stats.Network.ServerStatsItem["Data Ping"]
	local ping = pingStat and math.floor(pingStat:GetValue()) or 0
	
	-- Update text
	textLabel.Text = string.format(
		"kurumi.cc | FPS: %d | Ping: %dms | Game: %s | Time: %s",
		fps,
		ping,
		getGameName(),
		getTimeString()
	)
	
	-- Auto-resize frame to fit text + padding
	local textSize = textLabel.TextBounds
	frame.Size = UDim2.new(0, textSize.X + 20, 0, textSize.Y + 8)
	frame.Position = UDim2.new(0.5, -(frame.Size.X.Offset / 2), 0, -50)
	
	-- Smooth neon-like flash using sine wave
	local t = tick() * flashSpeed
	local glow = (math.sin(t) + 1) / 2 -- 0 to 1
	local color = Color3.new(1, glow, 0) -- red to yellow
	local transparency = glow * fadeMax -- fade effect

	textLabel.TextColor3 = color
	textLabel.TextTransparency = transparency
	stroke.Color = color
	stroke.Transparency = transparency
end)

 -- kurumi image loader 


local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KurumiImageGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = game:GetService("CoreGui")

local imageLabel = Instance.new("ImageLabel")
imageLabel.Parent = screenGui
imageLabel.Size = UDim2.new(0, 300, 0, 300)
imageLabel.Position = UDim2.new(0.5, -150, 0.5, -150)
imageLabel.BackgroundTransparency = 1
imageLabel.Image = "rbxassetid://10666680028"
imageLabel.Visible = true

local dragging = false
local dragInput, dragStart, startPos

imageLabel.Active = true
imageLabel.Draggable = true


local uiStroke = Instance.new("UIStroke")
uiStroke.Thickness = 1
uiStroke.Color = Color3.fromRGB(255, 100, 100)
uiStroke.Transparency = 0.7
uiStroke.Parent = imageLabel


local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 20, 0, 20)
closeButton.Position = UDim2.new(1, -20, 0, 0)
closeButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Text = "X"
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 14
closeButton.BorderSizePixel = 0
closeButton.ZIndex = 2
closeButton.Parent = imageLabel

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

