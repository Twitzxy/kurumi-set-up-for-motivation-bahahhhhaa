-- Dragging functionality
local UserInputService = game:GetService("UserInputService")
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    Frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

Frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = Frame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

Frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- FPS Counter
local RunService = game:GetService("RunService")
local fps = 0
local fpsCount = 0
local fpsTime = 0

RunService.Heartbeat:Connect(function()
    fpsCount = fpsCount + 1
    fpsTime = fpsTime + RunService.Heartbeat:Wait()
    
    if fpsTime >= 1 then
        fps = fpsCount
        fpsCount = 0
        fpsTime = 0
    end
end)

-- Function to resize frame based on text
local function resizeFrame()
    local textSize = TextLabel.TextBounds
    local newWidth = math.max(textSize.X + 20, 200) -- Minimum width of 200, add 20px padding
    Frame.Size = UDim2.new(0, newWidth, 0, 30)
end

local MarketplaceService = game:GetService("MarketplaceService")

-- Function to get actual game name
local function getGameName()
    local success, result = pcall(function()
        return MarketplaceService:GetProductInfo(game.PlaceId).Name
    end)
    return success and result or ("PlaceId: " .. tostring(game.PlaceId))
end

-- Update function with all requested information
local function updateWatermark()
    while true do
        local currentDateTime = os.date("*t")
        local formattedDate = string.format("%s %d %d", 
            ({"January", "February", "March", "April", "May", "June", 
              "July", "August", "September", "October", "November", "December"})[currentDateTime.month],
            currentDateTime.day,
            currentDateTime.year)
        local formattedTime = os.date("%H:%M:%S")
        
        local player = game.Players.LocalPlayer
        local username = player.Name
        local userId = player.UserId
        local gameName = getGameName()
        
        -- Get ping (approximate)
        local ping = math.floor(game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue())
        
        TextLabel.Text = string.format("kurumi.cc | FPS: %d | Ping: %dms | %s | %s (%d) | %s - %s", 
            fps, ping, gameName, username, userId, formattedDate, formattedTime)
        
        -- Resize frame after text update
        wait(0.1) -- Small delay to ensure text is rendered
        resizeFrame()
        
        wait(0.9) -- Wait remaining time to complete 1 second cycle
    end
end

coroutine.wrap(updateWatermark)()

